<section class="form-auth" text-center>

 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

   <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
   <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true, class: "form-control",  placeholder: "Email address", autocomplete: "current-email" %>

   <label for="inputPassword" class="sr-only">Password</label>
  <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control", id: "inputPassword" %>

   <div class="checkbox mb-3">
     <label>
       <input type="checkbox" value="remember-me"> Remember me
     </label>
   </div>
   <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
   <p class="mt-5 mb-3 text-muted text-center">Â© 2017-2020</p>
 <% end %>

 <%= render "devise/shared/links" %>
</section>

