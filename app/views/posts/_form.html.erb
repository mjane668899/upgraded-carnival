<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-control" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :url, class: "form-control" %>
    <%= form.text_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :summary, class: "form-control" %>
    <%= form.text_field :summary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "form-control" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Photo:" %>
    <%= form.file_field :image, class: "form-control" %>
    <%= form.hidden_field :image_cache %>

    <% if @post.image.present? %>
      <%= image_tag @post.image.thumb.url, class: "mt-4"%>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :active, class: "form-control" %>
    <%= form.check_box :active, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
